{
	"i18n": true,
	"type": "panel",
	"items": {
		"_info": {
			"type": "header",
			"text": "Connection Settings",
			"size": 3
		},
		"deviceIp": {
			"type": "text",
			"label": "Device IP Address",
			"placeholder": "192.168.4.1",
			"newLine": true,
			"xs": 12,
			"sm": 8,
			"md": 7,
			"lg": 6,
			"xl": 5,
			"help": "IP address of your Hailo Libero device (default: 192.168.4.1 when connected to device's WiFi)",
		},
		"devicePort": {
			"type": "number",
			"label": "Port",
			"placeholder": "81",
			"min": 1,
			"max": 65535,
			"newLine": false,
			"xs": 12,
			"sm": 8,
			"md": 7,
			"lg": 6,
			"xl": 5,
			"help": "Port number (default: 81)"
		},
		"password": {
			"type": "password",
			"label": "Password",
			"placeholder": "hailo",
			"newLine": true,
			"xs": 12,
			"sm": 8,
			"md": 7,
			"lg": 6,
			"xl": 5,
			"help": "Device password (default: hailo)"
		},
		"_polling": {
			"type": "header",
			"text": "Polling Settings",
			"size": 3,
			"newLine": true
		},
		"pollInterval": {
			"type": "number",
			"label": "Poll Interval (seconds)",
			"min": 5,
			"max": 300,
			"placeholder": "30",
			"newLine": true,
			"xs": 12,
			"sm": 8,
			"md": 7,
			"lg": 6,
			"xl": 5,
			"help": "How often to check device status (5-300 seconds)"
		},
		"testConnection": {
			"type": "sendTo",
			"label": "Test Connection",
			"command": "testConnection",
			"jsonData": "{\"ip\": \"${data.deviceIp}\", \"port\": \"${data.devicePort}\", \"password\": \"${data.password}\"}",
			"button": "Test Connection",
			"variant": "contained",
			"openUrl": false,
			"window": "_self",
			"newLine": true
		}
	}
}
